server {
    listen 80;
    server_name your-domain.com;  # Replace with your domain or IP

    location / {
        proxy_pass http://127.0.0.1:8000;  # Proxy to Gunicorn or your app server
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Redirect requests for static files to S3
    location /static/ {
        proxy_pass https://x23377852-maximum.s3.amazonaws.com/static/;
    }

    # Redirect requests for media files to S3
    location /media/ {
        proxy_pass https://x23377852-maximum.s3.amazonaws.com/media/;
    }

    # Optional: Add caching for static files
    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|eot|ttf|svg|otf)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    error_log /var/log/nginx/maximum_error.log;
    access_log /var/log/nginx/maximum_access.log;
}