server {
    listen 80;
    server_name _;

    location /static/ {
        alias /var/www/maximum/src/static/;
    }

    location /media/ {
        alias /var/www/maximum/src/media/;
    }

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_log /var/log/nginx/maximum_error.log;
    access_log /var/log/nginx/maximum_access.log;
}